        span.sttitle Button colors
        div.margin-bottom
            a.btn--primary(href="#") Modifier: btn--primary
        div.margin-bottom
            a.btn.btn--disabled(href="#") Modifier: btn--disabled
        div.margin-bottom
            a.btn.btn--info(href="#") Modifier: btn--info
        div.margin-bottom
            a.btn.btn--error(href="#") Modifier: btn--error
        div.margin-bottom
